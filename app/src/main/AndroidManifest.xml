<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.NetflixCloneUI"
        android:usesCleartextTraffic="true"
        tools:targetApi="31">
        <activity
            android:name=".screen.BottomNavActivity"
            android:exported="true"
            android:label="@string/title_activity_bottom_nav" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".screen.auth.ResetPasswordActivity"
            android:exported="false" />
        <activity
            android:name=".screen.auth.VerifyOtpForgotPasswordActivity"
            android:exported="false" />
        <activity
            android:name=".screen.auth.VerifyOtpActivity"
            android:exported="false" />
        <activity
            android:name=".screen.auth.ForgotPasswordActivity"
            android:exported="false" />
        <activity
            android:name=".screen.auth.RegisterActivity"
            android:exported="false" />
        <activity
            android:name=".screen.auth.LoginActivity"
            android:exported="false" />
        <activity
            android:name=".screen.HomeActivity"
            android:exported="false">
        </activity>
        <activity
            android:name=".screen.SplashActivity"
            android:exported="false" />
    </application>

</manifest>